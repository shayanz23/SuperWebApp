@page
@model SyperWeb.Pages.FutureValueModel
@{
    ViewData["Title"] = "Future value page";
}

<div>
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="FutureValue!.MonthlyInvestment" class="control-label"></label>
            <input asp-for="FutureValue!.MonthlyInvestment" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="FutureValue!.YearlyInterestRate" class="control-label"></label>
            <input asp-for="FutureValue!.YearlyInterestRate" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="FutureValue!.Years" class="control-label"></label>
            <input asp-for="FutureValue!.Years" class="form-control"/>
        </div>
        <div class="form-group">
            <label class="control-label">Future value:</label>
            <input value='@ViewBag.FV.ToString("C2")' class="form-control" readonly/>
        </div>
        <div class="form-group">
            <br />
            <button type="submit" class="btn btn-primary">Calculate</button>
            <a asp-action="" class="btn btn-success">Clear</a>
        </div>
    </form>
</div>
